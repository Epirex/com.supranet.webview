<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/messages_header">

        <EditTextPreference
            app:key="url_preference"
            app:title="Carga un URL"
            app:summary="Ingrese el nuevo URL"
            app:defaultValue="http://www.supranet.ar" />

        <CheckBoxPreference
            app:key="enable_local"
            app:title="Habilita carga local"
            app:summary="Carga cualquier HTML desde la memoria interna"
            app:defaultValue="false" />

        <EditTextPreference
            app:key="url_local"
            app:title="Cargar URL local"
            app:summary="Ingrese el nuevo URL local"
            app:defaultValue="file://"
            app:dependency="enable_local"/>

        <CheckBoxPreference
            app:key="hide_toolbar"
            app:title="Ocultar el toolbar"
            app:summary="Oculta el toolbar en el webview"
            app:defaultValue="false" />

        <CheckBoxPreference
            app:key="show_toolbar"
            app:title="Mostrar Toolbar"
            app:summary="Mostrar Toolbar con un gesto en la pantalla"
            app:defaultValue="false"/>

        <CheckBoxPreference
            app:key="fullscreen"
            app:title="Pantalla completa"
            app:summary="Muestra la aplicacion en pantalla completa"
            app:defaultValue="false"/>

        <ListPreference
            app:key="reply"
            app:title="@string/reply_title"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:defaultValue="reply"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title"/>

        <SwitchPreferenceCompat
            app:key="attachment"
            app:title="@string/attachment_title"
            app:summaryOn="@string/attachment_summary_on"
            app:summaryOff="@string/attachment_summary_off"
            app:dependency="sync"/>

    </PreferenceCategory>

</PreferenceScreen>